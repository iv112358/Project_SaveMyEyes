<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@+id/pointElement">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/pointBackgroundElement"
        android:background="#BFAF96">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_big_delete"
            android:id="@+id/button_delete_point"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onDeletePointClick"
            android:textColor="#1D1626" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_big_edit"
            android:id="@+id/button_edit_point"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onEditPointClick"
            android:textColor="#1D1626" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78% on 12:28"
            android:id="@+id/brightnessPointText"
            android:inputType="none"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:textColor="#1D1626" />
    </RelativeLayout>
</LinearLayout>