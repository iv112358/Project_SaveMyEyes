<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="400dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#BFAF96">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:timePickerMode="spinner"
        android:layout_gravity="center_horizontal"
        android:amPmTextColor="#1D1626"
        android:numbersTextColor="#1D1626"
        android:numbersInnerTextColor="#1D1626" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set brightness"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/textSetPointBrightness"
        android:textColor="#1D1626" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/buttonSetPointDone"
        android:layout_marginTop="20dp"
        android:textColor="#1D1626" />
</LinearLayout>