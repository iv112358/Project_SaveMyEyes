<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.i112358.savemyeyes" >

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SaveApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetPointsActivity"
            android:label="@string/title_activity_set_points"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.i112358.savemyeyes.MainActivity" />
        </activity>
        <activity
            android:name=".ShakeServiceSettingsActivity"
            android:label="@string/title_activity_shake_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.i112358.savemyeyes.MainActivity" />
        </activity>

        <service
            android:name=".ShakeService"
            android:enabled="true">
        </service>
        <service
            android:name=".ChangeBrightnessService"
            android:enabled="true" >
        </service>
        <service
            android:name=".AlarmService"
            android:enabled="true">
        </service>

        <receiver
            android:name=".Alarm"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.i112358.savemyeyes" />
            </intent-filter>
        </receiver>

        <receiver android:name=".BootReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
